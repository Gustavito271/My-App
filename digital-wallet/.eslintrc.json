{
  "plugins": ["unused-imports"],
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "semi": ["error", "never"],
    "no-trailing-spaces": [
      "warn",
      {
        "skipBlankLines": true
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "unused-importes/no-unused-imports": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssing": false
      }
    ],
    "react/jsx-sort-props": [
      2,
      {
        "shorthandFirst": true,
        "multiline": "last",
        "ignoreCase": true
      }
    ],
    "no-var": "error",
    "spaced-comment": ["error", "always", { "markers": ["/"]}]
  }
}